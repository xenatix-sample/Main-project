<div class="row padding-right-small margin-bottom-xsmall padding-left-small">
    <div class="panel panel-light padding-xsmall">
        <div class="panel-body">
            <form role="form" id="payorDetailsForm" name="payorDetailsForm" xen-check-form permission-key="{{permissionKey}}" permission="{{resolvePermission(pageSecurity)}}" is-default="true" data-on-save="save(isNext, isMandatory, hasErrors)"  bs-modifiable="true" set-form-status="payorDetailsForm" set-form-mode>
                <div security permission-key="{{permissionKey}}" permission="{{resolvePermission(pageSecurity)}}" is-disabled="{{isPlanDisabled}}" permission-mode="readonly">
                    <h3 class="uppercase nomargin padding-xsmall border-top">PLAN</h3>
                    <div class="row padding-top-small">
                        <div class="section-block col-md-12 padding-bottom-small">
                            <div class="col-md-10">
                                <div class="col-md-5 form-group-lg padding-bottom-small" ng-class="{ 'has-error' : payorDetailsForm.PayorPlanName.$invalid && !payorDetailsForm.PayorPlanName.$pristine }">
                                    <label for="payorPlanName">Payor Plan Name <sup>*</sup></label>
                                    <input type="text" ng-model="payorPlan.PlanName" id="PayorPlanName" ng-required="true" data-ng-maxlength="100" name="PayorPlanName" class="form-control" data-validation-name="Payor Plan Name" auto-focus event-focus="autoFocus" data-ng-required="true" />
                                    <p data-ng-show="payorDetailsForm.PayorPlanName.$error.maxlength" class="error-block">Maximum 100 Characters permitted.</p>
                                </div>
                                <div class="col-md-5 form-group-lg padding-bottom-small" ng-class="{ 'has-error' : payorDetailsForm.PlanID.$invalid && !payorDetailsForm.PlanID.$pristine }">
                                    <label for="payorPlanID">Payor Plan ID </label>
                                    <input type="text" class="form-control ellipsis" ng-model="payorPlan.PlanID" data-ng-maxlength="50" name="PlanID" data-validation-name="Plan ID" />
                                    <p data-ng-show="payorDetailsForm.PlanID.$error.maxlength" class="error-block">Maximum 50 Characters permitted.</p>
                                </div>
                                <div class="col-md-5 form-group-lg padding-bottom-small" ng-class="{ 'has-error' : payorDetailsForm.effectiveDate.$invalid && !payorDetailsForm.effectiveDate.$pristine}">
                                    <label for="effectiveDate">Effective Date <sup>*</sup></label>
                                    <xen-date-picker id="effectiveDate" data-validation-name="Effective Date" date-required="true" data-compare-element-name="expirationDate" ng-model="payorPlan.EffectiveDate" end-date="payorPlan.ExpirationDate" greater-than-date-validation="true" name="effectiveDate" ignore-time="true"></xen-date-picker>
                                    <p ng-cloak ng-show="payorDetailsForm.effectiveDate.$error.date && !payorDetailsForm.effectiveDate.$pristine" class="error-block">Effective Date is invalid.</p>
                                    <p ng-show="payorDetailsForm.effectiveDate.$error.greaterThanDate" ng-cloak class="error-block">Effective date can't be greater than Expiration date.</p>
                                </div>
                                <div class="col-md-5 form-group-lg padding-bottom-small" ng-class="{'has-error' : payorDetailsForm.expirationDate.$invalid && !payorDetailsForm.expirationDate.$pristine}">
                                    <label for="expirationDate">Expiration Date</label>
                                    <xen-date-picker id="expirationDate" data-validation-name="Expiration Date" data-compare-element-name="effectiveDate" ng-model="payorPlan.ExpirationDate" past-date-validate="true" start-date="payorPlan.EffectiveDate" less-than-date-validation="true" name="expirationDate" ignore-time="true"></xen-date-picker>
                                    <p ng-show="payorDetailsForm.expirationDate.$error.pastDate" ng-cloak class="error-block">Expiration date can't be Past Date.</p>
                                    <p ng-cloak ng-show="payorDetailsForm.expirationDate.$error.date && !payorDetailsForm.expirationDate.$pristine" class="error-block">Expiration Date is invalid.</p>
                                    <p ng-show="payorDetailsForm.expirationDate.$error.lessThanDate" ng-cloak class="error-block">Expiration date can't be less than Effective date.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row padding-top-small">
                        <div class="col-lg-6 col-md-6">
                            <p class="uppercase subtext"><sup>*</sup> Indicates a required field</p>
                        </div>
                        <div class="col-lg-6 col-md-6 text-right nopadding-left">
                            <xen-submit id="btnSave" name="btnSave" value="SAVE" is-next="false" mandatory="true" style="btn btn-default btn-lg" permission-key="{{permissionKey}}" permission="{{resolvePermission(pageSecurity)}}"></xen-submit>
                        </div>
                    </div>
                </div>
            </form>
            &nbsp;
            <h3 class="uppercase nomargin padding-xsmall border-top">PLAN ADDRESSES</h3>
            <div class="row padding-top-small col-md-12">
                <div class="add_me w-header-button">
                    <plus-button title="New Address" href="javascript:void(0);" ng-if="showPlus" ui-sref="businessadministration.configuration.payors.payorplans.plandetails.initial" permission-key="{{permissionKey}}" permission="create"></plus-button>
                </div>
                <div class="row padding-small">
                    <table id="planAddressesTable" data-toggle="table"
                           data-sort-order="desc"
                           data-show-columns="true"
                           data-search="true"
                           data-minimum-count-columns="2"
                           data-filter-control="false"
                           data-mobile-responsive="true"
                           data-filter-bar
                           data-advanced-search="false"
                           data-show-multi-sort="true"
                           data-classes="table table-stripe-borders"
                           bootstrap-table="tableoptions" grid-arrow-selector>
                        <thead>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
