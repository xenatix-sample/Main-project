@model List<Axis.PluginsEngine.PluginDescriptor>

<div class="panel panel-light padding-xsmall">
    <div class="panel-body">
        <table class="table table-striped table-bordered table-style">
            <thead>
                <tr>
                    <th>Plugin Name</th>
                    <th>Plugin Info</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.SystemName</td>
                    <td>
                        <b>@item.FriendlyName</b><br />
                        Version: @item.Version<br />
                        System Name: @item.SystemName<br />
                        Installed: @(item.Installed == true ? "Yes" : "No")
                    </td>
                    <td>
                        @if (item.Installed)
                        {
                        <a href="/Configuration/Plugins/UnInstall?SystemName=@item.SystemName" class="btn btn-default" security permission-key="SiteAdministration-PluginConfiguration-PluginConfiguration" permission="create">Uninstall</a>
                        }
                        else
                        {
                        <a href="/Configuration/Plugins/Install?SystemName=@item.SystemName" class="btn btn-default" security permission-key="SiteAdministration-PluginConfiguration-PluginConfiguration" permission="create">Install</a>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
