<keypress-events on-save="safeSubmit(false,true)" on-next="safeSubmit(false,true)" on-cancel="cancel()" table-id="phoneTable" enter-key-stop="enterKeyStop" stop-next="stopNext" save-on-enter="saveOnEnter"  permission-key="General-General-Phone" permission="{{resolvePermission(phone.ContactPhoneID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">
        <form role="form" name="ctrl.contactPhoneForm" novalidate ng-submit="ctrl.contactPhoneForm.$valid" server-validate="ServerValidationErrors" bs-modifiable="true" data-on-save="save(isNext, isMandatory, hasErrors)" check-form set-form-status>
            <div security permission-key="General-General-Phone" permission="{{resolvePermission(phone.ContactPhoneID)}}" permission-mode="readonly" dual-permission="true">
                <div class="row section-block padding-bottom-small">
                    @Html.Partial("../Shared/_Phone")
                </div>
            </div>
            <div class="row padding-top-small">
                <div class="col-lg-6 col-md-6">
                    <p class="uppercase subtext"><sup>*</sup> Indicates a required field</p>
                </div>
                <div class="col-lg-6 col-md-6 text-right">
                    <button type="button" class="btn btn-default btn-lg" ng-click="safeSubmit(false,true)" id="btnSave" name="btnSave" ng-keydown="($event.keyCode || $event.which)==9  ? setFocusToGrid('phoneTable',$event) : null" security permission-key="General-General-Phone" permission="{{resolvePermission(phone.ContactPhoneID)}}" dual-permission="true">SAVE</button>
                </div>
            </div>
        </form>
        
        <div class="add_me">
            <plus-button title="Contact Phone" permission-key="General-General-Phone" permission="create" save="safeSubmit(false,true)" reset="reset()" table-id="phoneTable"></plus-button>
        </div>
        <div class="row padding-top-small padding-bottom-small">
            <div class="col-md-12">
                <table id="phoneTable" data-toggle="table"
                       data-show-columns="true"
                       data-search="true"
                       data-minimum-count-columns="2"
                       data-filter-control="false"
                       data-mobile-responsive="true"
                       data-filter-bar
                       data-advanced-search="false"
                       data-show-multi-sort="true"
                       data-classes="table table-stripe-borders"
                       bootstrap-table="tableoptions" grid-arrow-selector>
                    <thead>
                        <tr>
                            <th data-field="Number"
                                data-sortable="true">Number</th>
                            <th data-field="PhoneTypeID"
                                data-sortable="true">Phone Type</th>
                            <th data-field="PhonePermissionID"
                                data-sortable="true">Phone Permission</th>
                            <th data-field="EffectiveDate"
                                data-sortable="true">Effective Date</th>
                            <th data-field="ExpirationDate"
                                data-sortable="true">Expiration Date</th>
                            <th data-field="IsPrimary"
                                data-sortable="false">IsPrimary</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
