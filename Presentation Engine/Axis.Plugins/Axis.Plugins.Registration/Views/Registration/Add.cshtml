@{
    ViewBag.Title = "Add";
    Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="patientModel" tabindex="-1" role="dialog" aria-labelledby="patientModel" aria-hidden="true">
    <div class="modal-dialog" style="width:1200px;">
        <div ng-controller="RegistrationController">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#ececec;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div ng-if="enableContactSearch">
                    <contact-search contact-type="" search-title="Client" on-contact-select="onContactSelect(contactID)" set-shortcut-key="setShortcutKey(enterKeyStop, stopNext, saveOnEnter, stopSave)" set-focus="setFocus(autoFocus)" set-cancel-function="setCancelFunction(cancelFunction)"></contact-search>
                </div>
                <div class="modal-body">
                    <form role="form" name="contactForm" novalidate ng-submit="contactForm.$valid">
                        @Html.Partial("_ContactDemographics")
                        @Html.Partial("../Shared/_Address")
                        @Html.Partial("../Shared/_ContactMethod")
                    </form>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">Close</button>
                    <button type="button" class="btn btn-success" style="background-color:#4c873d;" ng-click="save()">Save changes</button>*@

                    <button type="button" class="btn btn-success" style="background-color:#4c873d;" ng-click="safeSubmit(false, true)" id="btnSave" name="brnSave" ng-disabled="contactForm.$invalid" security permission-key="Registration-Registration-Demographics" permission="create">SAVE</button>
                    <button type="button" class="btn btn-success" style="background-color:#4c873d;" ng-click="safeSubmit(true, true)" id="btnNext" name="btnNext" security permission-key="Registration-Registration-Demographics" permission="create">NEXT</button>
                    <button type="button" class="btn btn-success" style="background-color:#4c873d;" data-dismiss="modal" ng-click="cancel()" id="btnCancel" name="btnCancel">CANCEL</button>
                </div>
            </div>
        </div>
</div>

