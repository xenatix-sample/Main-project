
<div>
    <div class="form-group-lg padding-bottom-small"
         ng-if="!param.MultiValue && param.ValidValues && param.ValidValues.length > 0">
        <label class="description required">
            {{param.Prompt}}
            <span ng-if="param.Required"> *</span>
        </label>
        <select class="form-control" ng-model="param.Value"
                ng-options="vv.Value as vv.Label for vv in param.ValidValues">
            <option value="">SELECT</option>
        </select>
    </div>
    <div class="form-group-lg padding-bottom-small"
         ng-if="param.MultiValue && param.ValidValues && param.ValidValues.length > 0">
        <label class="description required">
            {{param.Prompt}}
            <span ng-if="param.Required"> *</span>
        </label>
        <multi-select name="param.Name"
                      items="param.ValidValues"
                      selected="param.Values"
                      options="{ Fields: { Text: 'Label', Value: 'Value' } }">
        </multi-select>
    </div>
    <div class="form-group-lg padding-bottom-small"
         ng-if="!param.ValidValues || param.ValidValues.length < 1">
        <label class="description required">
            {{param.Prompt}}
            <span ng-if="param.Required"> *</span>
        </label>
        <input type="number" class="form-control"
               ng-model="param.Value" />
    </div>
</div>
