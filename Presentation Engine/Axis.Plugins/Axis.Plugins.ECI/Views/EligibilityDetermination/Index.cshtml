<keypress-events on-save="safeSubmit(false, true)" on-next="safeSubmit(true, true)" permission-key="ECI-Eligibility-Eligibility" permission="{{resolvePermission(eligibilityID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">
        <div security permission-key="ECI-Eligibility-Eligibility" permission="{{resolvePermission(eligibilityID)}}" permission-mode="readonly">
            <form role="form" name="ctrl.eligibilityForm" novalidate ng-submit="ctrl.eligibilityForm.$valid" server-validate="ServerValidationErrors"
                  bs-modifiable="true" check-form data-on-save="save(isNext, isMandatory, hasErrors)">
                {{ctrl.eligibilityForm.modified ? setform(true):setform(false)}}
                @Html.Partial("../Shared/_EligibilityHeader")
            </form>
       </div>
            <div class="row padding-top-small">
                <div class="col-lg-6 col-md-6">
                    <p class="uppercase subtext">
                        <sup>*</sup> Indicates a required field
                    </p>
                </div>
                <div class="col-lg-6 col-md-6 text-right">
                    <button type="button" id="eligibilityDeterminationSave" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, true)" name="btnSave" security permission-key="ECI-Eligibility-Eligibility" permission="{{resolvePermission(eligibilityID)}}">SAVE</button>
                    <button type="button" id="eligibilityDeterminationNext" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, true)" name="btnNext" security permission-key="ECI-Eligibility-Eligibility" permission="{{resolvePermission(eligibilityID)}}">NEXT</button>
                </div>
            </div>
            <div class="add_me">
                <plus-button title="New Eligibility" permission-key="ECI-Eligibility-Eligibility" permission="create" save="safeSubmit(false, true)" reset="init()" table-id="eligibilityTable"></plus-button>
            </div>
            <div class="row padding-top-small padding-bottom-small">
                <div class="col-md-12">
                    <table id="eligibilityTable" data-toggle="table"
                           data-show-columns="true"
                           data-search="true"
                           data-minimum-count-columns="2"
                           data-filter-control="false"
                           data-mobile-responsive="true"
                           data-filter-bar
                           data-advanced-search="false"
                           data-show-multi-sort="true"
                           data-classes="table table-stripe-borders"
                           bootstrap-table="tableoptions" grid-arrow-selector>
                        <thead>
                            <tr>
                                <th data-field="EligibilityDate"
                                    data-sortable="true">Eligibility Date</th>
                                <th data-field="EligibilityType"
                                    data-sortable="true">Type</th>
                                <th data-field="EligibilityCategory"
                                    data-sortable="true">Category</th>
                                <th data-field="AdjustedAge"
                                    data-sortable="true">Adjusted Age</th>
                                <th data-field="EligibilityDuration"
                                    data-sortable="true">Duration</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
</div>