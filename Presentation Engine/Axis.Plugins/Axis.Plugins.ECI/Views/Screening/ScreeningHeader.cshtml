<keypress-events on-save="safeSubmit(false, false, false)" on-next="safeSubmit(true, false, true)" permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">

        <form role="form" name="ctrl.screeningsForm" check-form data-on-save="saveHeader(isNext, isMandatory, hasErrors, keepForm)" novalidate bs-modifiable="true">
            {{ setform(ctrl.screeningsForm.modified, ctrl.screeningsForm.name) }}
            <div class="col-md-12" ng-init="initHeader()">
                <div security permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}" permission-mode="readonly">
                    @Html.Partial("../Shared/_ScreeningHeader")
                </div>
            </div>

            <div class="row padding-top-small">
                <div class="col-lg-6 col-md-6">
                    <p class="uppercase subtext"><sup>*</sup> Indicates a required field</p>
                </div>
                <div class="col-lg-6 col-md-6 text-right">
                    <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, false, false)" id="btnSave" name="btnSave" security permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}">SAVE</button>
                    <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false, true)" id="btnNext" name="btnNext" security permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}" ng-disabled="AssessmentID === 0">NEXT</button>
                </div>
            </div>
        </form>
    </div>
</div>