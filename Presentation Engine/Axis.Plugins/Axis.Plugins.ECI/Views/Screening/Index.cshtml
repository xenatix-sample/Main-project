<keypress-events on-save="safeSubmit(false, false, false)" on-next="safeSubmit(true, false, true)" permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}"></keypress-events>
    <div class="panel panel-light padding-xsmall">
        <div class="panel-body">
            <div security permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}" permission-mode="readonly">
                <form role="form" name="ctrl.screeningsForm" check-form data-on-save="save(isNext, isMandatory, hasErrors, keepForm)" novalidate bs-modifiable="true">
                    {{ setform(ctrl.screeningsForm.modified, ctrl.screeningsForm.name) }}

                    <div class="col-md-12">
                        <div ui-view>
                        </div>
                        @Html.Partial("../Shared/_ScreeningHeader")
                    </div>
                    <div class="row padding-top-small">
                        <div class="col-lg-6 col-md-6">
                            <p class="uppercase subtext"><sup>*</sup> Indicates a required field</p>
                        </div>
                        <div class="col-lg-6 col-md-6 text-right">
                            <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, false, false)" id="btnSave" name="btnSave" security permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}">SAVE</button>
                            <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false, true)" id="btnNext" name="btnNext" security permission-key="ECI-Screening-Screening" permission="{{resolvePermission(screening.ScreeningID)}}">NEXT</button>
                        </div>
                    </div>
                    <div class="add_me">
                        <plus-button title="New Screening" permission-key="ECI-Screening-Screening" permission="create" save="safeSubmit(false, false)" reset="newScreening()"></plus-button>
                    </div>
                    <div class="row padding-top-small padding-bottom-small">
                        <div class="col-md-12">
                            <table id="screeningsTable" data-toggle="table"
                                   data-show-columns="true"
                                   data-search="true"
                                   data-minimum-count-columns="2"
                                   data-filter-control="false"
                                   data-mobile-responsive="true"
                                   data-filter-bar
                                   data-advanced-search="false"
                                   data-show-multi-sort="true"
                                   data-classes="table table-stripe-borders"
                                   bootstrap-table="tableoptions" grid-arrow-selector>
                                <thead>
                                    <tr>
                                        <th data-field="ScreeningName"
                                            data-sortable="true">ScreeningName</th>
                                        <th data-field="ScreeningType"
                                            data-sortable="true">ScreeningType</th>
                                        <th data-field="ScreeningDate"
                                            data-sortable="true">ScreeningDate</th>
                                        <th data-field="ScreeningResult"
                                            data-sortable="true">Result</th>
                                        <th data-field="ScreeningScore"
                                            data-sortable="true">Score</th>
                                        <th data-field="SubmittedBy"
                                            data-sortable="true">SubmittedBy</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </form>
             </div>
            </div>
    </div>
