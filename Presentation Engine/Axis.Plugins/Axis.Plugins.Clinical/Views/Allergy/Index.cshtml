<keypress-events on-save="safeSubmit(false, true)" on-next="safeSubmit(true, false)" permission-key="Clinical-Allergy-Allergy" permission="{{resolvePermission(allergyDetails.ContactAllergyID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">
        <div security permission-key="Clinical-Allergy-Allergy" permission="{{resolvePermission(allergyDetails.ContactAllergyID)}}" permission-mode="readonly">
            <form role="form" name="ctrl.allergyForm" novalidate ng-submit="ctrl.allergyForm.$valid" server-validate="ServerValidationErrors"
                  bs-modifiable="true" check-form data-on-save="save(isNext, isMandatory, hasErrors)">
                {{ctrl.allergyForm.modified ? setform(true):setform(false)}}
                @Html.Partial("../Shared/_Allergy")
            </form>
        </div>
        <div class="row padding-top-small">
            <div class="col-lg-6 col-md-6">
                <p class="uppercase subtext">
                    <sup>*</sup> Indicates a required field
                </p>
            </div>
            <div class="col-lg-6 col-md-6 text-right">
                <button type="button" id="allergySave" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, true)" name="btnSave" security permission-key="Clinical-Allergy-Allergy" permission="{{resolvePermission(allergyDetails.ContactAllergyID)}}">SAVE</button>
                <button type="button" id="allergyNext" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false)" name="btnNext" security permission-key="Clinical-Allergy-Allergy" permission="{{resolvePermission(allergyDetails.ContactAllergyID)}}">NEXT</button>
            </div>
        </div>
        <div class="add_me">
            <plus-button title="New Allergy" permission-key="Clinical-Allergy-Allergy" permission="create" save="safeSubmit(false, true)" reset="init()" table-id="allergyTable"></plus-button>
        </div>

        <div class="row padding-top-small padding-bottom-small">
            <div class="col-md-12">
                <table id="allergyTable" data-toggle="table"
                       data-show-columns="true"
                       data-search="true"
                       data-minimum-count-columns="2"
                       data-filter-control="false"
                       data-mobile-responsive="true"
                       data-filter-bar
                       data-advanced-search="false"
                       data-show-multi-sort="true"
                       data-classes="table table-stripe-borders"
                       bootstrap-table="tableoptions" grid-arrow-selector>
                    <thead>
                        <tr>
                            <th data-field="TakenTime"
                                data-sortable="true">Taken On</th>
                            <th data-field="TakenBy"
                                data-sortable="true">Taken By</th>
                            <th data-field="AllergyID"
                                data-sortable="true">Allergy</th>
                            <th data-field="SeverityID"
                                data-sortable="true">Severity</th>
                            <th data-field="Symptoms"
                                data-sortable="false">Related Symptoms</th>
                            <th data-field="ContactAllergyDetailID"
                                data-sortable="false"></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>