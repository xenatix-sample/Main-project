<keypress-events on-save="safeSubmit(false, false, false)" on-next="safeSubmit(true, false, false)" ignore-enter="ignoreEnter" on-add="newChiefComplaint()" permission-key="Clinical-ChiefComplaint-ChiefComplaint" permission="{{resolvePermission(chiefComplaint.ChiefComplaintID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">
        <div security permission-key="Clinical-ChiefComplaint-ChiefComplaint" permission="{{resolvePermission(chiefComplaint.ChiefComplaintID)}}" permission-mode="readonly">
            <form role="form" id="chiefComplaintForm" name="ctrl.chiefComplaintForm" check-form data-on-save="save(isNext, isMandatory, hasErrors, keepForm)" novalidate data-ng-submit="ctrl.chiefComplaintForm.$valid" bs-modifiable="true">
                {{ setform(ctrl.chiefComplaintForm.modified, ctrl.chiefComplaintForm.name) }}

                <div class="row">
                    <div class="col-md-12">
                        @Html.Partial("../Shared/_TakenDetails")
                    </div>
                </div>

                <div class="row padding-top-small margin-bottom-small">
                    <div class="col-md-10 padding-bottom-small">
                        <div class="form-group-lg padding-bottom-small" data-ng-class="{ 'has-error' : ctrl.chiefComplaintForm.Complaint.$invalid && !ctrl.chiefComplaintForm.Complaint.$pristine }">
                            <xen-memobox label="Chief Complaint *" rows="4" maxlength="1000" ng-model="chiefComplaint.Complaint" auto-focus event-focus="autoFocus" id="complaint" name="complaint" ng-focus="allowEnterKey()" ng-blur="captureEnterKey()" ng-required="true"></xen-memobox>
                        </div>
                    </div>
                </div>

            </form>
        </div>
        <div class="row padding-top-small">
            <div class="col-lg-6 col-md-6">
                <p class="uppercase subtext">
                    <sup>*</sup> Indicates a required field
                </p>
            </div>
            <div class="col-lg-6 col-md-6 text-right">
                <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, false, false)" id="btnSave" name="btnSave" security permission-key="Clinical-ChiefComplaint-ChiefComplaint" permission="{{resolvePermission(chiefComplaint.ChiefComplaintID)}}">SAVE</button>
                <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false, false)" id="next" security permission-key="Clinical-ChiefComplaint-ChiefComplaint" permission="{{resolvePermission(chiefComplaint.ChiefComplaintID)}}">NEXT</button>
            </div>
        </div>

        <div class="add_me">
            <plus-button title="New Chief Complaint" permission-key="Clinical-ChiefComplaint-ChiefComplaint" permission="create" save="safeSubmit(false, false)" reset="newChiefComplaint()"></plus-button>
        </div>

        <div class="row padding-top-small padding-bottom-small">
            <div class="col-md-12">
                <table id="chiefComplaintTable" data-toggle="table"
                       data-show-columns="true"
                       data-search="true"
                       data-minimum-count-columns="2"
                       data-filter-control="false"
                       data-mobile-responsive="true"
                       data-filter-bar
                       data-advanced-search="false"
                       data-show-multi-sort="true"
                       data-classes="table table-stripe-borders"
                       bootstrap-table="tableoptions" grid-arrow-selector>
                    <thead>
                        <tr>
                            <th data-field="TakenBy"
                                data-sortable="true">TakenBy</th>
                            <th data-field="TakenDate"
                                data-sortable="true">TakenDate</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

    </div>
</div>
