<keypress-events on-save="safeSubmit(false, false, false)" on-next="safeSubmit(true, false, true)" on-add="init()" permission-key="Clinical-SocialRelationshipHistory-SocialRelationshipHistory" permission="{{resolvePermission(socialRelationship.SocialRelationshipID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">

        <form role="form" name="ctrl.socialRelationshipForm" check-form data-on-save="save(isNext, isMandatory, hasErrors, keepForm)" novalidate bs-modifiable="true">
            {{ setform(ctrl.socialRelationshipForm.modified, ctrl.socialRelationshipForm.name) }}

            <div class="row">
                <div class="col-md-12">
                    <div ui-view>
                    </div>
                    <div security permission-key="Clinical-SocialRelationshipHistory-SocialRelationshipHistory" permission="{{resolvePermission(socialRelationship.SocialRelationshipID)}}" permission-mode="readonly">
                        @Html.Partial("../Shared/_TakenDetails")
                    </div>
                </div>
            </div>
            <div class="row padding-top-small">
                <div class="col-lg-6 col-md-6">
                    <p class="uppercase subtext"><sup>*</sup> Indicates a required field</p>
                </div>
                <div class="col-lg-6 col-md-6 text-right">
                    <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, false, false)" id="btnSave" name="btnSave" security permission-key="Clinical-SocialRelationshipHistory-SocialRelationshipHistory" permission="{{resolvePermission(socialRelationship.SocialRelationshipID)}}">SAVE</button>
                    <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false, true)" id="btnNext" name="btnNext" security permission-key="Clinical-SocialRelationshipHistory-SocialRelationshipHistory" permission="{{resolvePermission(socialRelationship.SocialRelationshipID)}}">NEXT</button>
                </div>
            </div>
            <div class="add_me">
                <plus-button title="Social Relationship" save="safeSubmit(false, false)" permission-key="Clinical-SocialRelationshipHistory-SocialRelationshipHistory" permission="create" reset="init()"></plus-button>
            </div>
            <div class="row padding-top-small padding-bottom-small">
                <div class="col-md-12">
                    <table id="socialRelationshipTable" data-toggle="table"
                           data-show-columns="true"
                           data-search="true"
                           data-minimum-count-columns="2"
                           data-filter-control="false"
                           data-mobile-responsive="true"
                           data-filter-bar
                           data-advanced-search="false"
                           data-show-multi-sort="true"
                           data-classes="table table-stripe-borders"
                           bootstrap-table="tableoptions" grid-arrow-selector>
                        <thead>
                            <tr>
                                <th data-field="TakenBy"
                                    data-sortable="true">Taken By</th>
                                <th data-field="TakenTime"
                                    data-sortable="true">Taken Date</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </form>

    </div>
</div>
