<keypress-events on-save="safeSubmit(false, false, false)" on-next="safeSubmit(true, false, false)" permission-key="Clinical-ReviewOfSystems-ReviewofSystems" permission="{{resolvePermission(reviewOfSystem.RoSID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall">
    <div class="panel-body">

        <form role="form" name="ctrl.reviewOfSystemsForm" check-form data-on-save="saveReview(isNext, isMandatory, hasErrors, keepForm)" novalidate bs-modifiable="true">
            {{ctrl.reviewOfSystemsForm.modified ? setform(true):setform(false)}}

            <div class="row padding-top-small" ng-init="initReview()">
                <div security permission-key="Clinical-ReviewOfSystems-ReviewofSystems" permission="{{resolvePermission(reviewOfSystem.RoSID)}}" permission-mode="readonly">
                    <div class="col-lg-6 col-md-6">
                        <fieldset id="isReviewChangedFieldset">
                            <legend class="uppercase">Has RoS Changed ?</legend>
                            <span><xen-radio-button data-ng-model="reviewOfSystem.IsReviewChanged" data-radio-button-id="IsReviewChangedYes" data-label="Yes" data-ng-value="true" ng-disabled="!allowReview" /></span>
                            &nbsp;&nbsp;&nbsp;
                            <span><xen-radio-button data-ng-model="reviewOfSystem.IsReviewChanged" data-radio-button-id="IsReviewChangedNo" data-label="No" data-ng-value="false" ng-disabled="!allowReview" /></span>
                        </fieldset>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 text-right">
                    <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, false, false)" id="btnReviewedNoChanges" name="btnReviewedNoChanges" security permission-key="Clinical-ReviewOfSystems-ReviewofSystems" permission="{{resolvePermission(reviewOfSystem.RoSID)}}">SAVE</button>

                    <button type="button" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false, false)" id="next" security permission-key="Clinical-ReviewOfSystems-ReviewofSystems" permission="{{resolvePermission(reviewOfSystem.RoSID)}}">NEXT</button>
                </div>
            </div>
        </form>
    </div>
</div>