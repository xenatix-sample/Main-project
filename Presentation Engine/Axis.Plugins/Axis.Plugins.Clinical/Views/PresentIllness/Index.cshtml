<keypress-events on-save="safeSubmit(false, true)" on-next="safeSubmit(true, false)" permission-key="Clinical-PresentIllness-PresentIllness" permission="{{resolvePermission(hpi.HPIID)}}"></keypress-events>
<div class="panel panel-light padding-xsmall" ng-controller="presentIllnessController">
    <div class="panel-body">

        <form role="form" name="ctrl.hpiForm" novalidate ng-submit="ctrl.hpiForm.$valid" server-validate="ServerValidationErrors"
              bs-modifiable="true" check-form data-on-save="save(isNext, isMandatory, hasErrors)">
            {{ctrl.hpiForm.modified ? setform(true):setform(false)}}

            <div class="row">
                <div class="col-md-12">
                    <div security permission-key="Clinical-PresentIllness-PresentIllness" permission="{{resolvePermission(hpi.HPIID)}}" permission-mode="readonly">
                        @Html.Partial("_HPIDetails")
                    </div>
                </div>
            </div>
            <div class="row padding-top-small">
                <div class="col-lg-6 col-md-6">
                    <p class="uppercase subtext">
                        <sup>*</sup> Indicates a required field
                    </p>
                </div>
                <div class="col-lg-6 col-md-6 text-right">
                    <button type="button" id="btnSave" class="btn btn-default btn-lg" data-ng-click="safeSubmit(false, true)" name="btnSave" security permission-key="Clinical-PresentIllness-PresentIllness" permission="{{resolvePermission(hpi.HPIID)}}">
                        SAVE
                    </button>
                    <button type="button" id="btnNext" class="btn btn-default btn-lg" data-ng-click="safeSubmit(true, false)" name="btnNext" security permission-key="Clinical-PresentIllness-PresentIllness" permission="{{resolvePermission(hpi.HPIID)}}">
                        NEXT
                    </button>
                </div>
            </div>
            <div class="add_me">
                <plus-button title="New HPI" permission-key="Clinical-PresentIllness-PresentIllness" permission="create" save="safeSubmit(false, true)" reset="init()"></plus-button>
            </div>
            <div class="row padding-top-small padding-bottom-small">
                <div class="col-md-12">
                    <table id="presentIllnessTable" data-toggle="table"
                           data-show-columns="true"
                           data-search="true"
                           data-minimum-count-columns="2"
                           data-filter-control="false"
                           data-mobile-responsive="true"
                           data-filter-bar
                           data-advanced-search="false"
                           data-show-multi-sort="true"
                           data-classes="table table-stripe-borders"
                           bootstrap-table="tableoptions" grid-arrow-selector>
                        <thead>
                            <tr>
                                <th data-field="TakenTime"
                                    data-sortable="true">Taken On</th>
                                <th data-field="Location"
                                    data-sortable="true">Location</th>
                                <th data-field="TakenBy"
                                    data-sortable="true">Taken By</th>
                                <th data-field="HPIDetailID"
                                    data-sortable="false"></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </form>

    </div>
</div>
